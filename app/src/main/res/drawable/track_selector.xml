<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
            <solid android:color="@color/txt_site_green_color" />
            <corners android:radius="50dp" />
            <size android:width="2dp" android:height="@dimen/_15sdp" />
            <padding android:top="@dimen/_2sdp" android:bottom="@dimen/_2sdp" android:right="@dimen/_2sdp" android:left="@dimen/_2sdp"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
            <solid android:color="@color/txt_site_red_color" />
            <corners android:radius="50dp" />
            <size android:width="2dp" android:height="@dimen/_15sdp" />
           <!-- <stroke
                android:width="2dp"
                android:color="@color/white" />-->
            <padding android:top="@dimen/_2sdp" android:bottom="@dimen/_2sdp"  android:right="@dimen/_2sdp" android:left="@dimen/_2sdp"/>
        </shape>
    </item>
</selector>
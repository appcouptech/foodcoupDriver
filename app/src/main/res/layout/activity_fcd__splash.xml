<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_main"
    android:background="@drawable/splash_bg_sw_600"
    tools:context=".FCDActivity.FCDSplashActivity.FCD_SplashActivity">


    <FrameLayout
        android:id="@+id/frame_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/ic_launcher_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txt_poweredBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/_10sdp"/>

    </FrameLayout>


    <LinearLayout
        android:id="@+id/ll_noInternetConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linnonet"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding10"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/colorwhite">

        <ImageView
            android:clickable="true"
            android:id="@+id/imgnonet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher_background"
            android:focusable="true" />



        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/padding10"
            android:layout_marginLeft="@dimen/padding10"
            android:id="@+id/nonet"
            android:textSize="@dimen/textsize15"
            android:textColor="@color/colorblack"
            android:layout_marginStart="@dimen/padding10" />

    </LinearLayout>

</LinearLayout>
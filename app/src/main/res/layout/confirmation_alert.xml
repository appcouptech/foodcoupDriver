<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/rec_boarder_grey_bg_white"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <foodcoup.driver.demand.FCDViews.AC_Textview
                style="@style/FCD_RegularThickTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirmation" />

            <foodcoup.driver.demand.FCDViews.AC_Textview
                android:id="@+id/txt_alertDesc"
                style="@style/FCD_RegularLiteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp" />

            <foodcoup.driver.demand.FCDViews.AC_Textview
                android:id="@+id/txt_alertDesc1"
                style="@style/FCD_RegularThickTextView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp" />

            <foodcoup.driver.demand.FCDViews.AC_Textview
                android:id="@+id/txt_alertAmount"
                style="@style/FCD_RegularLiteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_18ssp"
                android:textColor="@color/colorAppBackground_lite"
                android:visibility="gone"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                tools:ignore="UselessLeaf">

                <foodcoup.driver.demand.FCDViews.AC_Textview
                    android:id="@+id/txt_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/cancel_btn"
                    android:textColor="@color/txt_site_red_color"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <foodcoup.driver.demand.FCDViews.AC_Textview
                    android:id="@+id/txt_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/confirm"
                    android:textColor="@color/txt_site_green_color"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

            </FrameLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>